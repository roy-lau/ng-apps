/* HeroDetailComponent's private CSS styles */
div.hero-detail
  width: 30%
  margin: 0 auto
  padding: 15px
  border: 1px solid
  label
    display: inline-block
    margin: 0.5em 0
    color: #607D8B
    font-weight: bold
  input
    height: 2em
    font-size: 1em
    padding-left: 0.4em
  button
    margin-top: 20px
    font-family: Arial
    background-color: #eee
    border: none
    padding: 5px 10px
    border-radius: 4px
    cursor: pointer
    cursor: hand
  button:hover
    background-color: #cfd8dc
  button:disabled
    background-color: #eee
    color: #ccc
    cursor: auto